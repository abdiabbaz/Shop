@page
@model Shop.Pages.Users.GetAllCustomersModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <title>Showing all customers</title>
</head>

<body>
    <div class="container mt-3">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>ID Number</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Balance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.Customers)
                {
                    <tr>
                        <td>@c.Id</td>
                        <td>@c.Name</td>
                        <td>@c.Email</td>
                        <td>@c.Balance</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>

