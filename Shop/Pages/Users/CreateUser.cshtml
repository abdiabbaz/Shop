@page
@model Shop.Pages.Users.CreateUserModel
@{
}

<style>
    .form-group {
        width: 200px;
    }

    .midten {
        display: flex;
        justify-content: center;
    }

    .button{
        display:flex;
        justify-content: center;
        margin-top: 15px;
    }
</style>

<body>

    <h2 style="text-align: center"> Create your profile!</h2>
    <div class="midten container">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" id="Verify Password" class="control-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
            </div>
            <div class="button">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
</body>